%html
  %head
    %title= "Private Ladder System"
    %link{:href => "/css/main.css", :media=>"all", :rel=>"stylesheet", :type=>"text/css"}
  %body
    #header
      .quick-nav
        .menu-item
          %a{:href => '/'}= "index"
        .separator= "|"
        .menu-item
          %a{:href => '/players'}= "players"
        .separator= "|"
        .menu-item
          %a{:href => '/leagues'}= "leagues"
        .separator= "|"
        - if session[:login].nil?
          .menu-item
            %a{:href => '/register'}= "register"
          .separator= "|"
        - unless session[:login].nil?
          .menu-item
            %a{:href => '/logout'}= "logout"
          .separator= "|"
          .menu-item
            ="welcome "
            %a{:href => "/player/#{session[:player]['_id']}"}=session[:player]["name"]
        - if session[:login].nil?
          .menu-item
            %a{:href => '/login'}= "login"
    #content
      = yield